{
  "name": "@kirbic/types",
  "version": "1.0.1",
  "main": "index.js",
  "repository": "git@github.com:kirbic/types.ts.git",
  "author": "Marc Pomar <marc@corecode.school>",
  "license": "MIT",
  "build": "pika build",
  "keywords": [
    "kirbic",
    "ecommerce",
    "api",
    "sdk",
    "toolkit",
    "typescript"
  ],
  "scripts": {
    "semantic-release": "semantic-release",
    "build": "pika build",
    "update-endpoints": "npm-run-all update-endpoints:*",
    "update-endpoints:fetch-json": "node scripts/update-endpoints/fetch-json",
    "update-endpoints:typescript": "node scripts/update-endpoints/typescript",
    "update-endpoints:package": "node scripts/update-endpoints/package"
  },
  "dependencies": {
    "@kirbic/openapi-types": "^1.1.8",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "got": "^9.6.0",
    "graphql-got": "^0.1.2",
    "sort-keys": "^4.2.0"
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "handlebars": "^4.7.7",
    "npm-run-all": "^4.1.5",
    "pika-plugin-merge-properties": "^1.0.6",
    "prettier": "^2.2.1",
    "semantic-release": "^17.4.2",
    "semantic-release-plugin-update-version-in-files": "^1.1.0"
  },
  "octokit": {
    "openapi-version": "1"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "pika-plugin-merge-properties",
        {
          "properties": {
            "octokit": "see https://github.com/jabuco/pika-plugin-merge-properties/issues/2"
          }
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "release": {
    "branches": "main",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "pkg/dist-src/VERSION.js",
            "pkg/dist-types/VERSION.d.ts",
            "pkg/*/index.js"
          ]
        }
      ]
    ]
  }
}
